.promo__form_header
	font-family: Exo2semiBold;
	font-size: 30px;
	font-weight: bold;
	text-transform: uppercase;
	color: #fff;
	margin 20px 0 30px
	position relative
	display inline-block
	text-align center

	&:after
		position absolute
		display block
		content " "
		height 0
		bottom -10px
		left 0
		right 0
		border-top 3px solid #ffba01