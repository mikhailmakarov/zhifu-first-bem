.popup_tech__header
	text-align center
	font-family: Exo2bold;
	font-size: 20px;
	font-weight: bold;
	margin-bottom 20px

	@media screen and (max-width: 900px)
		margin-bottom 10px
		font-size: 16px;

.popup_tech__block
	text-align center
	margin-bottom 35px
	@media screen and (max-width: 900px)
		margin-bottom 10px

.popup_tech
	font-family: Exo2;
	font-size: 15px;
	color: #000;
	&:last-child
		margin-bottom 0 !important

.popup_tech__close_button
	display block
	position absolute
	width 42px
	height 42px
	top -14px
	right -8px
	background-color #fade23
	border-radius 21px
	text-align center
	line-height 42px
	z-index 10000
	&:hover
		font-weight bold
		cursor pointer
