.bonuses__bonus_item
	max-width 495px
	width 31%
	min-width 300px
	min-height 200px
	list-style-type none
	margin-top 330px
	position relative
	display inline-block
	vertical-align middle

	&:before
		content " "
		position absolute
		display block
		top -300px
		left 50%
		width 237px
		height 263px
		margin-left -117px
		background-image url("../../../img/bonus.png")
		background-size cover

	&:after
		content " "
		position absolute
		display block
		top -290px
		left 50%
		width 218px
		height 174px
		margin-left -109px
		background-position 50% 50%
		background-repeat no-repeat