.input_icon_mail .input__box
	position relative
	&:before
		background-image url("mail.png")
		background-repeat no-repeat
		background-size contain
		background-position center
		content " "
		display block
		position absolute
		left 10px
		top 50%
		margin-top -16px
		width 32px
		height 32px

		@media screen and (max-width: 1300px)
			left 7px
			margin-top -9px
			width 22px
			height 22px
		
.input_theme_orion.input_icon_mail input
	padding-left 50px

	@media screen and (max-width: 1300px)
		padding-left 33px