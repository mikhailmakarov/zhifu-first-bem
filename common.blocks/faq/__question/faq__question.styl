.faq__question
	display flex
	justify-content space-between
	align-items center
	position relative
	font-family: Exo2;
	font-size: 30px;
	color: #474747;
	margin-bottom 50px

	@media screen and (max-width: 1300px)
		font-size: 20px;
		margin-bottom 33px

	&:before
		content "?"
		position absolute
		background-color #1671a7
		border-radius: 30px;
		top 50%
		margin-top -30px
		left -80px
		width 60px
		height 60px
		text-align center
		line-height 59px
		font-family: Exo2bold;
		font-size: 36px;
		font-weight: bold;
		text-transform: uppercase;
		color: #fff;

		@media screen and (max-width: 1300px)
			border-radius: 20px;
			margin-top -20px
			left -55px
			width 40px
			height 40px
			text-align center
			line-height 39px
			font-family: Exo2bold;
			font-size: 24px;	