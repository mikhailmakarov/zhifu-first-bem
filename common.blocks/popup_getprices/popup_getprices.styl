.popup_getprices__header
	text-align center
	font-family: Exo2bold;
	font-size: 28px;
	font-weight: bold;
	margin-bottom 50px

.popup_getprices__block
	text-align center
	margin-bottom 35px

.popup_getprices
	&:last-child
		margin-bottom 0 !important

.popup_getprices__close_button
	display block
	position absolute
	width 42px
	height 42px
	top -14px
	right -8px
	background-color #fade23
	border-radius 21px
	text-align center
	line-height 42px
	z-index 10000
	&:hover
		font-weight bold
		cursor pointer